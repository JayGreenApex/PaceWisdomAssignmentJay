<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaceWisdomAssignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/constraint_background_dashboard
        </item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/dashboard_text_color</item>
    </style>

    <style name="EditCard.General.Info.Label" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
    </style>

    <style name="EditCard.TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
        <item name="android:textColorHint">@color/dashboard_text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="colorControlNormal">@color/dashboard_text_color</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="colorControlActivated">@color/dashboard_text_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="hintTextColor">@color/dashboard_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
</resources>